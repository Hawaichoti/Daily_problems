/* * 
  *** 
 ***** 
*******  */
#include <stdio.h>
int main() 
{
   
    for(int i=1;i<=4;i++)
    {
        for(int c = 3;c>=i;c--)
        {
            printf(" ");
        }
        for(int j=1; j<=i;j++)
        {
            printf("*");
        }
        for(int j1=i-1; j1>=1;j1--)
        {
            printf("*");
        }
        printf(" \n");
    }

    return 0;
