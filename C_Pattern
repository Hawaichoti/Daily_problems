#include <stdio.h>
int main() {
    // Write C code here
    printf("Try programiz.pro\n");
    for(int i=1;i<=4;i++)
    {
        for(int c = 3;c>=i;c--)
        {
            printf(" ");
        }
        for(int j=1; j<=i;j++)
        {
            printf("%d",j);
        }
        for(int j1=i-1; j1>=1;j1--)
        {
            printf("%d",j1);
        }
        printf(" \n");
    }

    return 0;
